@page
@model WebApplication1.Pages.ContactsPage.IndexModel
@{
}
<h2 class="text-center mb-5 mb-5"></h2>
<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" href="/ContactsPage/Create">Add Contact</a>
    </div>
    <div class="col"></div>
</div>

<table class="table">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Contact Type</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Postal Code</th>
        <th>Country</th>
        <th>Actions</th>
    </tr>
    @foreach(var contact in Model.contacts)
    {
       <tr>
            <td>@contact.Id</td>
            <td>@contact.FirstName</td>
            <td>@contact.LastName</td>
            <td>@contact.ContactType</td>
            <td>@contact.Email</td>
            <td>@contact.Phone</td>
            <td>@contact.PostalCode</td>
            <td>@contact.Country</td>
        <td style="white-space:nowrap">
                <a class="btn btn-primary btn-sm" href="/ContactsPage/Edit?id=@contact.Id">Edit</a>
                <a class="btn btn-danger btn-sm" href="/ContactsPage/Delete/?id=@contact.Id">Detele</a>
        </td>
       </tr>

    }
</table>

